---
import { Image } from "astro:assets";

import Image404 from "../static/404.svg";

import Layout from "../layouts/Layout.astro";
---

<Layout title="Page not Found" description="That page was not found">
    <div class="flex flex-col justify-center items-center mt-10">
        <h1 class="text-light_text dark:text-dark_text">
            Sorry, page not found
        </h1>
        <Image
            class="mt-8"
            src={Image404}
            alt="Image showing that page was not found"
            format="svg"
            height={300}
            width={300}
        />
    </div>
</Layout>
