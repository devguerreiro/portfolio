---
import { Image } from "astro:assets";

import ImageMaintenance from "../static/maintenance.svg";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Maintenance</title>
    </head>
    <body>
        <div
            class="flex flex-col justify-center items-center"
            style="height: 100vh;"
        >
            <h1 class="text-light_text dark:text-dark_text">
                Sorry, the website version for your device is on maintenance
            </h1>
            <Image
                class="mt-8"
                src={ImageMaintenance}
                alt="Image showing that page is in maintenance"
                format="svg"
                height={300}
                width={300}
            />
        </div>
    </body>
</html>
