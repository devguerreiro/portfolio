<section class="py-20 px-6 max-w-5xl mx-auto border-t border-gray-800">
  <h2 class="text-3xl font-bold text-center mb-10 text-[#A8CA58]">
    Soft Skills
  </h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6 text-center">
    {
      [
        "Liderança técnica",
        "Visão de negócio",
        "Comunicação com stakeholders",
        "Resolução de problemas",
        "Espírito de equipe",
        "Proatividade e ambição",
        "Adaptação a ambientes ágeis",
        "Busca contínua por evolução",
      ].map((skill) => (
        <div class="h-24 bg-white/10 backdrop-blur-md py-6 px-4 rounded-2xl shadow-md hover:scale-105 transition flex justify-center items-center">
          <p class="text-white font-medium">{skill}</p>
        </div>
      ))
    }
  </div>
