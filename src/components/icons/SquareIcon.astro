---
interface Props {
  class?: string;
  size: number;
}

const { class: className, size } = Astro.props;
---

<i class:list={["icon", className]}>
  <svg
    width={size}
    height={size}
    aria-label="A square icon"
    viewBox=`0 0 ${size} ${size}`
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <rect width={size} height={size} fill="currentColor"></rect>
  </svg>
</i>
