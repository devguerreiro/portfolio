---
interface Props {
  alt: string;
  class?: string;
  width?: number;
  height?: number;
}

const { alt, class: className, width = 24, height = 24 } = Astro.props;
---

<i class:list={["icon", className]}>
  <svg
    width={width}
    height={height}
    aria-label={alt}
    viewBox="0 0 24 24"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <slot />
  </svg>
</i>
