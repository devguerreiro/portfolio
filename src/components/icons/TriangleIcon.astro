---
interface Props {
  class?: string;
  size: number;
}

const { class: className, size } = Astro.props;
---

<i class:list={["icon", className]}>
  <svg
    width={size}
    height={size}
    aria-label="A triangle icon"
    viewBox="0 0 75 75"
    fill="none"
    xmlns="http://www.w3.org/2000/svg"
  >
    <path d="M32.5 0L64.976 56.25H0.0240479L32.5 0Z" fill="currentColor"></path>
  </svg>
</i>
